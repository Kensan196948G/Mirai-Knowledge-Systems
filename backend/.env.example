# 環境変数設定ファイル（開発環境用）

# データベース設定
DATABASE_URL=postgresql://postgres:password@localhost:5432/mirai_knowledge_db

# JWT設定
JWT_SECRET_KEY=your-secret-key-change-this-in-production-please-make-it-very-long-and-random
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Flask設定
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-flask-secret-key-change-this-too

# CORS設定
CORS_ORIGINS=http://localhost:5000,http://192.168.0.145:5000

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# レート制限
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=redis://localhost:6379

# ファイルアップロード
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
